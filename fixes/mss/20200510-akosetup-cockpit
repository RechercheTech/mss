tarball=akosetup-cockpit.tar.xz
serverip=repo.myscoolserver.com
rm /etc/NetworkManager/dispatcher.d/90mssnmdispatcher 2>/dev/null || true
wget http://$serverip/fixes/$tarball
tar xf $tarball -C / && rm $tarball
chmod +x /usr/bin/akosetup-cockpit /usr/bin/mssipchangeap /usr/bin/networkvariablesap.sh
touch /etc/NetworkManager/system-connections/akohome.nmconnection
chown root.root /etc/NetworkManager/system-connections/*
chmod 600 /etc/NetworkManager/system-connections/*
chown mssadmin /usr/share/cockpit/akosetup/ap.conf /usr/share/cockpit/akosetup/ako.js
chmod 600 /usr/share/cockpit/akosetup/ap.conf /usr/share/cockpit/akosetup/ako.js
systemctl restart nginx
if test -f /lib/systemd/system/apsetup.service; then
	systemctl disable apsetup; rm /lib/systemd/system/apsetup.service
fi
echo "`date`: $tarball applied" >> /var/log/fixlog
